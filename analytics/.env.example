# Configuração do Facebook Pixel e Conversions API
# Copie este arquivo para .env e preencha com seus dados reais

# Facebook Pixel ID (obrigatório)
# Encontre em: Facebook Business Manager > Eventos > Pixels
FACEBOOK_PIXEL_ID=your_pixel_id_here

# Facebook Access Token (obrigatório para Conversions API)
# Gere em: Facebook Business Manager > Configurações do Sistema > Tokens de Acesso
FACEBOOK_ACCESS_TOKEN=your_access_token_here

# Test Event Code (opcional - para modo de teste)
# Encontre em: Facebook Business Manager > Eventos > Test Events
FACEBOOK_TEST_EVENT_CODE=your_test_event_code_here

# Configurações do Servidor
PORT=3001
NODE_ENV=production

# Configurações de Segurança
SESSION_SECRET=your_session_secret_here
JWT_SECRET=your_jwt_secret_here

# Configurações de Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Configurações de Cache
CACHE_TTL_HOURS=24
CACHE_CLEANUP_INTERVAL_HOURS=1

# Configurações de Log
LOG_LEVEL=info
LOG_FILE_PATH=./logs/analytics.log

# Configurações do Banco de Dados
DB_PATH=./analytics.db
DB_BACKUP_INTERVAL_HOURS=6

# Configurações de Email (para notificações)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Configurações de Webhook (opcional)
WEBHOOK_SECRET=your_webhook_secret
WEBHOOK_URL=https://your-domain.com/webhook

# Configurações de CORS
CORS_ORIGIN=https://your-domain.com
CORS_CREDENTIALS=true

# Configurações de SSL (para produção)
SSL_CERT_PATH=./ssl/cert.pem
SSL_KEY_PATH=./ssl/key.pem

# Configurações de Monitoramento
MONITORING_ENABLED=true
MONITORING_INTERVAL_MINUTES=5

# Configurações de Backup
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_S3_REGION=us-east-1

# Configurações de Analytics
ANALYTICS_RETENTION_DAYS=90
ANALYTICS_AGGREGATION_ENABLED=true

# Configurações de Performance
COMPRESSION_ENABLED=true
CACHE_STATIC_FILES=true
STATIC_FILES_MAX_AGE=86400

# Configurações de Segurança Avançada
CSP_ENABLED=true
HSTS_ENABLED=true
X_FRAME_OPTIONS=DENY
X_CONTENT_TYPE_OPTIONS=nosniff